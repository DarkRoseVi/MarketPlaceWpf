<Page x:Class="MarketPlaceWpf.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarketPlaceWpf.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="51*"/>
            <RowDefinition Height="383*"/>
        </Grid.RowDefinitions>
        <Button x:Name="ExitBtn"
                      VerticalAlignment="Bottom" HorizontalAlignment="Right"
                        Content="Exit" 
                        Click="ExitBtn_Click" Width="100"/>
        <DockPanel Grid.Row="2">
            <StackPanel DockPanel.Dock="Left">
                <Button Width="100" Content="Product"
                        x:Name="ProductBtn" Click="ProductBtn_Click"/>

            </StackPanel>

            <Frame DockPanel.Dock="Top" x:Name="MyFrame"/>

        </DockPanel>
    </Grid>
</Page>
